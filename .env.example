# Django Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DJANGO_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Option 1: Use DATABASE_URL (recommended)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/medical_practice

# Option 2: Use individual DB variables (alternative)
# DB_NAME=medical_practice
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# DOCKER DATABASE CONFIGURATION (when using docker-compose)
# =============================================================================
# Uncomment these when running with docker-compose
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/medical_practice
# DB_NAME=medical_practice
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=postgres
# DB_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Docker Redis (when using docker-compose)
# REDIS_URL=redis://redis:6379/0
# CELERY_BROKER_URL=redis://redis:6379/1

# =============================================================================
# OPENAI API
# =============================================================================
OPENAI_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# SECURITY (Production)
# =============================================================================
# Generate a secure secret key for production:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# SECRET_KEY=your-production-secret-key

# SSL/HTTPS Settings (Production only)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000

# =============================================================================
# SUPERUSER CREATION (Docker)
# =============================================================================
# These variables are used by docker-entrypoint.sh to create an initial superuser
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_EMAIL=admin@example.com
# DJANGO_SUPERUSER_PASSWORD=changeme123

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
# CELERY_TASK_ALWAYS_EAGER=False
# CELERY_TASK_EAGER_PROPAGATES=False

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Django Debug Toolbar (development only)
# ENABLE_DEBUG_TOOLBAR=True

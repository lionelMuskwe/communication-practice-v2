frontend:
  build:
    context: ./react_frontend
    dockerfile: Dockerfile
  ports:
    - "80:80"
  volumes:
    - ./react_frontend/build:/usr/share/nginx/html
    - ./nginx/nginx.conf:/etc/nginx/nginx.conf  # <--- Make sure this is correct
  environment:
    - NODE_ENV=production
    - REACT_APP_API_ADDRESS=http://51.68.198.166:5000/api
  depends_on:
    - api

# Django Environment Configuration
# Copy this file to .env and fill in your values

# Django Settings
DJANGO_ENV=development  # development, production, or test
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=medical_practice
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/medical_practice

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# OpenAI Configuration
OPENAI_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MODEL_TUNED=your-finetuned-model-id-if-any

# Celery / Redis Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/1

# Production-only Settings (leave empty in development)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
READ_REPLICA_URL=
